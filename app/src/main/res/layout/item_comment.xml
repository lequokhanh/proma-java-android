<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/imageView123"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/avatar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:maxEms="17"
        android:text="Angel Vaccaroooooo"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView123"
        app:layout_constraintStart_toEndOf="@+id/imageView123"
        app:layout_constraintTop_toTopOf="@+id/imageView123" />

    <TextView
        android:id="@+id/dateCmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="13:00 AM 11/10/23"
        android:textColor="#7C7C80"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameCmt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameCmt" />

    <TextView
        android:id="@+id/contentCmt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_regular"
        android:text="lorem ipsum dolor sit amet consectetuer adipiscing elit sed diam nonummy nibh askjdhajksdh"
        android:textColor="#444446"
        android:textSize="15sp"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nameCmt"
        app:layout_constraintTop_toBottomOf="@+id/nameCmt"
        app:layout_optimizationLevel="graph_wrap" />
</androidx.constraintlayout.widget.ConstraintLayout>