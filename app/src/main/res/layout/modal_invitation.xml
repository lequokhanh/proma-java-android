<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_22_top"
    android:orientation="vertical"
    android:paddingBottom="20dp">


    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bottomSheetDragHandleView"
        android:layout_width="645dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Reponse to Invitation "
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomSheetDragHandleView" />

    <Button
        android:id="@+id/AcceptBtn"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#007AFF"
        android:fontFamily="@font/roboto_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.01"
        android:text="Accept"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/RejectBtn"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#fff"
        android:elevation="0dp"
        android:fontFamily="@font/roboto_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0.01"
        android:text="Reject"
        android:textAllCaps="false"
        android:textColor="#FF3B30"
        android:textSize="17sp"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toEndOf="@+id/AcceptBtn"
        app:layout_constraintTop_toTopOf="@+id/AcceptBtn"
        app:strokeColor="#FF3B30"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>