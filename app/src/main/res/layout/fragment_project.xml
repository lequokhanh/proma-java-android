<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFF"
    android:backgroundTint="#F9FAFF"
    android:outlineProvider="background"
    android:paddingHorizontal="14dp"
    android:paddingTop="22dp"
    android:paddingBottom="55dp"
    tools:context=".ui.project.ProjectFragment">

    <TextView
        android:id="@+id/search_field"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/rounded_corner_8"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:drawableTint="#8E8E93"
        android:ems="10"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:hint="Search Here"
        android:inputType="text"
        android:paddingHorizontal="8dp"
        android:textColorHint="#8E8E93"
        android:textColorLink="#000"
        android:textCursorDrawable="@drawable/black_cursor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_field">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ProjectBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_24_blue"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Project"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/TaskBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_24_bw"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Task"
                android:textAlignment="center"
                android:textColor="#007AFF" />

            <TextView
                android:id="@+id/CompletedBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_24_bw"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Completed"
                android:textAlignment="center"
                android:textColor="#007AFF" />

            <TextView
                android:id="@+id/OnGoingBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_24_bw"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="On Going"
                android:textAlignment="center"
                android:textColor="#007AFF" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/AllProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:visibility="visible"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="wrap_content_constrained"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/project_card"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

            <include
                layout="@layout/project_card"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginVertical="8dp" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/AllTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:id="@+id/horizontalLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8">

            <LinearLayout
                android:id="@+id/leftSide"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/task_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <include
                    android:id="@+id/card_view2"
                    layout="@layout/task_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <include
                    layout="@layout/task_card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/task_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <include
                    layout="@layout/task_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>