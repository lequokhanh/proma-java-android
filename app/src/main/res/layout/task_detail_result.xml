<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_24_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="16dp"
            android:src="@drawable/ic_document"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Attachment"
            android:textColor="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />

        <TextView
            android:id="@+id/attach_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_24_bw"
            android:fontFamily="@font/roboto_bold"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="4dp"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView25"
            app:layout_constraintEnd_toStartOf="@+id/attachBtn"
            app:layout_constraintTop_toTopOf="@+id/textView25" />
        <Button
            android:id="@+id/attachBtn"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/rounded_corner_24_blue"
            android:backgroundTint="#007AFF"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:outlineProvider="none"
            android:padding="0dp"
            android:paddingStart="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Add"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_add_circle"
            app:iconGravity="start"
            app:iconPadding="2dp"
            app:iconSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_link"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/imageView10" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Link"
            android:textColor="#8E8E93"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintVertical_bias="1.0" />



        <TextView
            android:id="@+id/link_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_24_bw"
            android:fontFamily="@font/roboto_bold"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:paddingVertical="4dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintEnd_toStartOf="@+id/linkBtn"
            app:layout_constraintTop_toTopOf="@+id/textView26" />
        <Button
            android:id="@+id/linkBtn"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/rounded_corner_24_blue"
            android:backgroundTint="#007AFF"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center|start"
            android:includeFontPadding="false"
            android:outlineProvider="none"
            android:padding="0dp"
            android:paddingStart="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Add"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_add_circle"
            app:iconGravity="start"
            app:iconPadding="2dp"
            app:iconSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Comment (4)"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="More All"
        android:textColor="#007AFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView27" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>